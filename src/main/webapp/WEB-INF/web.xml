<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>demo</display-name>
  
  <session-config>
    <session-timeout>30</session-timeout>
</session-config>
  
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
     <servlet-name>ControllerServlet</servlet-name>
     <servlet-class>com.servlets.controller</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ControllerServlet</servlet-name>
    <url-pattern>/displayDetails</url-pattern>
  </servlet-mapping>
 <servlet>
     <servlet-name>userControllerServlet</servlet-name>
     <servlet-class>com.servlets.UserController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>userControllerServlet</servlet-name>
    <url-pattern>/userController</url-pattern>
  </servlet-mapping>
 
  <servlet>
     <servlet-name>login</servlet-name>
     <servlet-class>com.servlets.Login</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
     <servlet-name>signUp</servlet-name>
     <servlet-class>com.servlets.Signup</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>signUp</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>  

  <servlet>
     <servlet-name>search</servlet-name>
     <servlet-class>com.servlets.Search</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>search</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>  

  <servlet>
     <servlet-name>blogDispatcher</servlet-name>
     <servlet-class>com.servlets.BlogDisptcher</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>blogDispatcher</servlet-name>
    <url-pattern>/blogDispatcher</url-pattern>
  </servlet-mapping>  
    <servlet>
     <servlet-name>logout</servlet-name>
     <servlet-class>com.servlets.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>  
   <servlet>
     <servlet-name>deleteBlog</servlet-name>
     <servlet-class>com.servlets.DeleteBlog</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>deleteBlog</servlet-name>
    <url-pattern>/deleteBlog</url-pattern>
  </servlet-mapping> 
</web-app>